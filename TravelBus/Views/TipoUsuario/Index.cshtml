@model List<TravelBus.Models.TipoUsuarioCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.css">
<script src="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.js"></script>




<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using(Html.BeginForm("Index","TipoUsuario",FormMethod.Post,new {@id="frmBusqueda"} ))
{ 
<table class="table table-bordered table-hover">
    <tr>

        <th>
            @Html.DisplayNameFor(model => Model[0].iidtipousuario)
        </th>


        <th>
            @Html.DisplayNameFor(model => Model[0].nombre)
        </th>


        <th>
            @Html.DisplayNameFor(model => Model[0].descripcion)
        </th>


        <th>Operaciones</th>


    </tr>

    <tr>
        
        <td>@Html.TextBox("iidtipousuario",null,new {@class="form-control"})</td>
        <td>@Html.TextBox("nombre", null, new { @class = "form-control" })</td>
        <td>@Html.TextBox("descripcion", null, new { @class = "form-control" })</td>
        <td></td>

    </tr>



    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.iidtipousuario)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>


            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>

        </tr>
    }
</table>
}

<script>


    var iidtipousuario = document.getElementById("iidtipousuario");
    var nombre = document.getElementById("nombre");
    var descripcion = document.getElementById("descripcion");
    var frmBusqueda = document.getElementById("frmBusqueda");


    //Llamamos al formulario cada vez que ingresemos un texto a nuestro text box
    iidtipousuario.onkeyup = function ()
    {
        frmBusqueda.submit();      
    }

    nombre.onkeyup = function () {
        frmBusqueda.submit();
    }

    descripcion.onkeyup = function () {
        frmBusqueda.submit();
    }








</script>